{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"outDir": "./dist",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2017",
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"declarations.d.ts"
	],
	"exclude": [
		"**/node_modules",
		"**/.*/",
		"**/build/"
	],
	"typingOptions": {
		"enableAutoDiscovery": true
	}
}
