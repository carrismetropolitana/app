{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
   "allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
    "strict": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "ES2017"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
		"**/node_modules",
		"**/.*/",
		"**/build/",
	],
	"typingOptions": {
		"enableAutoDiscovery": true
	}
}